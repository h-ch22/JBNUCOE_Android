<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id = "@+id/toolbar"
        android:layout_margin="10dp"
        android:background="@drawable/titlebar_mapview"
        android:layout_width="match_parent"
        android:theme = "@style/MyThemeOverlay_Toolbar2"
        android:layout_height = "150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id = "@+id/txt_title"
                android:textSize="20sp"
                android:text = ""
                android:textColor="#ffffff"
                android:fontFamily="@font/nanumsquare_bold"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:visibility="gone"
                        android:id = "@+id/btn_B1F"
                        android:text = "지하 1층"
                        android:textColor="#000000"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_1F"
                        android:visibility="gone"
                        android:text = "1층"
                        android:textColor="#ff756b"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_2F"
                        android:text = "2층"
                        android:visibility="gone"
                        android:textColor="#ffb969"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_3F"
                        android:text = "3층"
                        android:visibility="gone"
                        android:textColor="#dbba00"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_4F"
                        android:text = "4층"
                        android:visibility="gone"
                        android:textColor="#75a300"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_5F"
                        android:text = "5층"
                        android:visibility="gone"
                        android:textColor="#2bc23a"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_6F"
                        android:text = "6층"
                        android:visibility="gone"
                        android:textColor="#42d6b1"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_7F"
                        android:text = "7층"
                        android:visibility="gone"
                        android:textColor="#ff756b"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_8F"
                        android:text = "8층"
                        android:visibility="gone"
                        android:textColor="#4ac9ff"
                        app:defaultColor="#ffffff"/>

                    <com.royrodriguez.transitionbutton.TransitionButton
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="10dp"
                        android:id = "@+id/btn_9F"
                        android:text = "9층"
                        android:visibility="gone"
                        android:textColor="#ff756b"
                        app:defaultColor="#ffffff"/>


                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <com.github.chrisbanes.photoview.PhotoView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:id = "@+id/img_inside"/>

</androidx.constraintlayout.widget.ConstraintLayout>