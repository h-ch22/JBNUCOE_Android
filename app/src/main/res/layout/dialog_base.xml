<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:padding="30dp"
    android:background="@drawable/dialog_background"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumsquare_extrabold"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:fontFamily="@font/nanumsquare_extrabold"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/dialog_contents"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id = "@+id/dialog_negativeButton"
            android:textSize="20sp"
            android:textColor="#eb4034"
            android:background="#00ff0000"
            android:fontFamily="@font/nanumsquare_bold"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:id = "@+id/dialog_positiveButton"
            android:textSize="20sp"
            android:textColor="#4a8cff"
            android:background="#00ff0000"
            android:fontFamily="@font/nanumsquare_bold"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>