<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#C83F51B5">

    <androidx.appcompat.widget.Toolbar
        app:layout_constraintTop_toTopOf="parent"
        android:id = "@+id/toolbar"
        android:gravity="top"
        android:layout_gravity="top"
        android:background="@drawable/titlebar"
        android:layout_width="match_parent"
        android:theme = "@style/MyThemeOverlay_Toolbar2"
        android:layout_height = "80dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id = "@+id/txt_title"
            android:textSize="20sp"
            android:text = "국별 소개"
            android:textColor="#ffffff"
            android:fontFamily="@font/nanumsquare_bold"/>


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_shy"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_nh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "1. 기획국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_plan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginVertical="20dp"
                    android:text = "기획국은 공과대학의 모든 행사들을 책임지고 앞장서서 기획하는 국입니다!"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "기획국장 유 승 훈\n기획부국장 김 남 현"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_hj"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_jw"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "2. 대외협력국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_cooperation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "대외협력국은 지속적인 제휴업체 관리, 공과대학의 대외적인 활동의 관리 및 감독을 하는 국입니다!"
                    android:textSize="20sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "대외협력국장 문 현 준\n대외협력부국장 한 지 우"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_hjy"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_sy"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "3. 사무국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_affairs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "사무국은 공과대학 학생회의 모든 예산안 편성 및 학우님들의 소중한 학생회비를 총 관리 감독하는 국입니다!"
                    android:layout_marginVertical="10dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "사무국장 윤 승 빈\n사무부국장 강 송 연"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_bc"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_sh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "4. 시설복지국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_welfair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "시설복지국은 공과대학 학우님들의 편의와 복지, 모든 시설물들을 책임지는 국입니다!"
                    android:textSize="20sp"
                    android:layout_marginVertical="10dp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "시설복지국장 이 병 철\n시설복지부국장 오 성 현"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_ij"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_js"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "5. 운영지원국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "운영지원국은 공과대학 학생회에서 진행하는 행사 및 사업을 운영하는 국입니다!"
                    android:layout_marginVertical="10dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "운영지원국장 최 인 정\n운영지원부국장 최 지 수"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_sm"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_hh"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "6. 정책국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "정책국은 공과대학 학생회의 공약 이행을 총괄하고, 재정 감사를 담당하는 국입니다!"
                    android:layout_marginVertical="10dp"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "정책국장 배 선 명\n정책부국장 정 환 희"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="250dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="200dp"
                        android:src = "@drawable/img_cj"/>

                    <ImageView
                        android:layout_width="175dp"
                        android:layout_height="match_parent"
                        android:src = "@drawable/img_hy"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text = "7. 홍보국"
                    android:textSize="25sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_extrabold"/>

                <TextView
                    android:id = "@+id/txt_promote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:gravity="center"
                    android:text = "홍보국은 공과대학 SNS 관리, 각종 행사에 대한 홍보물을 총괄하여 담당하며, 행사 사진 및 영상을 촬영/편집하는 국입니다!\n또한, 공과대학 공식 애플리케이션의 개발 및 유지보수도 함께 진행하고 있습니다!"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumsquare_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text = "홍보국장 하 창 진\n홍보부국장 이 하 영"
                    android:textSize="20sp"
                    android:textColor="#ffffff"
                    android:fontFamily="@font/nanumpen"/>

            </LinearLayout>


        </ScrollView>


    </LinearLayout>


</LinearLayout>